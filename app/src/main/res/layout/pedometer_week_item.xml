<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="#FFC107">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/StepItemTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:gravity="center"
            android:text="20/12/2018"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/StepItemTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:drawableTop="@drawable/ic_directions_run_black_24dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/StepItemTextView5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StepItemTextView1" />

        <TextView
            android:id="@+id/StepItemTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:drawableTop="@drawable/ic_speed_black_24dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/StepItemTextView5"
            app:layout_constraintHorizontal_bias="0.349"
            app:layout_constraintStart_toEndOf="@+id/StepItemTextView2"
            app:layout_constraintTop_toBottomOf="@+id/StepItemTextView1" />

        <TextView
            android:id="@+id/StepItemTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:drawableTop="@drawable/ic_fire_black_24dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/StepItemTextView5"
            app:layout_constraintHorizontal_bias="0.737"
            app:layout_constraintStart_toEndOf="@+id/StepItemTextView2"
            app:layout_constraintTop_toBottomOf="@+id/StepItemTextView1" />

        <TextView
            android:id="@+id/StepItemTextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:drawableTop="@drawable/ic_timer_black_24dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StepItemTextView1" />

        <TextView
            android:id="@+id/StepItemTextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:gravity="center"
            android:text="50000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/StepItemTextView1"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>